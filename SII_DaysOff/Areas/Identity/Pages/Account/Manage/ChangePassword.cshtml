@page
@model ChangePasswordModel
@{
    ViewData["Navigation"] = "Main";
    ViewData["notShow"] = false;
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "../../Views/Shared/_Layout";
}

<div class="container mb-5">
	<div class="row my-3">
		<img src="~/img/siigroup-spain-blueline.png" alt="Alternate Text" class="login mx-auto d-block" />
	</div>
	<h1 class="text-center fw-bold">@ViewData["Title"]</h1>
	<div class="row my-4">
		<div class="col-md-3 container-fluid">
			<section>
				<form id="change-password-form" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-floating mb-3">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Input.OldPassword" class="form-label"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <input asp-for="Input.OldPassword" class="form-control custom-form" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                        </div>
					</div>
					<div class="form-floating mb-3">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Input.NewPassword" class="form-label"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <input asp-for="Input.NewPassword" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
					</div>
					<div class="form-floating mb-3">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <input asp-for="Input.ConfirmPassword" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
					</div>
                    <div>
                        <button type="submit" class="w-100 custom-button-LogIn-Register">Update password</button>
					</div>
					<hr class="my-3" />
				</form>
			</section>
		</div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
