@page
@model RegisterModel

@{
	ViewData["Navigation"] = "Main";
	ViewData["notShow"] = false;
	ViewData["Title"] = "Register a new user";
}

<div class="container mb-5">
	<div class="row my-3">
		<img src="~/img/siigroup-spain-blueline.png" alt="Alternate Text" class="login mx-auto d-block" />
	</div>
	<h1 class="text-center fw-bold">@ViewData["Title"]</h1>
	<div class="row my-4">
		<div class="col-md-5 container-fluid">
			<section>
				<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Manager" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<select asp-for="Input.Manager" class="form-control custom-form" asp-items="ViewBag.ManagerId"></select>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Role" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<select asp-for="Input.Role" class="form-control custom-form" asp-items="ViewBag.RoleId"></select>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Email" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<input asp-for="Input.Email" class="form-control custom-form" autocomplete="username" aria-required="true" />
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Name" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<input asp-for="Input.Name" class="form-control custom-form" autocomplete="name" aria-required="true" />
								<span asp-validation-for="Input.Name" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Surname" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<input asp-for="Input.Surname" class="form-control custom-form" autocomplete="surname" aria-required="true" />
								<span asp-validation-for="Input.Surname" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.Password" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<input asp-for="Input.Password" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="form-floating mb-3">
						<div class="row">
							<div class="col-4">
								<label asp-for="Input.ConfirmPassword" class="control-label custom-control-label fw-bold"></label>
							</div>
							<div class="col-8">
								<input asp-for="Input.ConfirmPassword" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div>
						<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-primary my-3"
								asp-for="ReturnUrl" value="~/Home/Main" asp-route-optionStatus="Pending">
							Register
						</button>
					</div>
					<hr class="my-3" />
				</form>
			</section>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
