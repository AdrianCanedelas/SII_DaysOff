@page
@model RegisterModel

@{
	ViewData["Navigation"] = "Main";
	ViewData["notShow"] = false;
	ViewData["Title"] = "Register a new user";
}

<h1 class="d-flex ms-3">@ViewData["Title"]</h1>
<hr />
<div class="container-fluid">
	<div class="custom-container-edit mx-auto">
		<div class="row p-3 d-flex justify-content-center">
			<div class="col-12 col-lg-10 col-xl-8 col-xxl-6">
				<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="row d-flex justify-content-start py-2">
						<div class="col-12 col-md-6">
							<div class="form-floating py-3">
								<label asp-for="Input.Manager" class="control-label custom-control-label"></label>
								<select asp-for="Input.Manager" class="form-control custom-form" asp-items="ViewBag.ManagerId"></select>
							</div>
						</div>
						<div class="col-12 col-md-6">
							<div class="form-floating py-3">
								<label asp-for="Input.Role" class="control-label custom-control-label"></label>
								<select asp-for="Input.Role" class="form-control custom-form" asp-items="ViewBag.RoleId"></select>
							</div>
						</div>
						<div class="col-12 col-md-6 py-3">
							<div class="form-floating">
								<input asp-for="Input.Email" class="form-control custom-form" autocomplete="username" aria-required="true" />
								<label asp-for="Input.Email"></label>
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row d-flex justify-content-start py-2">
						<div class="col-12 col-md-6 py-3">
							<div class="form-floating">
								<input asp-for="Input.Name" class="form-control custom-form" autocomplete="name" aria-required="true" />
								<label asp-for="Input.Name"></label>
								<span asp-validation-for="Input.Name" class="text-danger"></span>
							</div>
						</div>
						<div class="col-12 col-md-6 py-3">
							<div class="form-floating">
								<input asp-for="Input.Surname" class="form-control custom-form" autocomplete="surname" aria-required="true" />
								<label asp-for="Input.Surname"></label>
								<span asp-validation-for="Input.Surname" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row d-flex justify-content-start py-2">
						<div class="col-12 col-md-6 py-3">
							<div class="form-floating">
								<input asp-for="Input.Password" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
								<label asp-for="Input.Password"></label>
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
						</div>
						<div class="col-12 col-md-6 py-3">
							<div class="form-floating">
								<input asp-for="Input.ConfirmPassword" class="form-control custom-form" autocomplete="new-password" aria-required="true" />
								<label asp-for="Input.ConfirmPassword"></label>
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row d-flex justify-content-start py-2">
						<div class="col-4 py-3">
							<button id="registerSubmit" type="submit" class="custom-button-register">Register</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

