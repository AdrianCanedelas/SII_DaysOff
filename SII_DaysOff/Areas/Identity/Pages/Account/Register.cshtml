@page
@model RegisterModel
@{
    ViewData["notShow"] = false;
    ViewData["Title"] = "Register a new user";
}

<h1 class="d-flex justify-content-center mb-4">@ViewData["Title"]</h1>
<div class="custom-div container-fluid shadow">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row px-3">
            <div class="col-12">
                <div class="form-floating py-3">
                    <label asp-for="Input.Manager" class="control-label custom-control-label"></label>
                    <select asp-for="Input.Manager" class="form-control" asp-items="ViewBag.ManagerId"></select>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="Input.Name"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Input.Surname" class="form-control" autocomplete="surname" aria-required="true" />
                    <label asp-for="Input.Surname"></label>
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row p-3">
            <button id="registerSubmit" type="submit" class="custom-button-register">Register</button>
        </div>
    </form>
</div>
