@model SII_DaysOff.Data.PaginatedList<Requests>

@{
	ViewData["notShow"] = false;
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mx-5">Manage requests</h1>

<div class="card shadow my-4 mx-4">
	<div class="card-header bg-light">
		<form asp-controller="Requests" asp-action="ManageIndex" class="mx-2 mt-3">
			<div class="form-actions no-color">
				<p>
					<input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="custom-button" />
					<input type="submit" value="Search" class="custom-button" /> |
					<a asp-controller="Requests" asp-action="ManageIndex" class="mx-2 custom-link">Back to Full List</a>
				</p>
			</div>
		</form>
	</div>
	<div class="parent">
		<div class="card-body cardRequestsManage">
			<div class="row">

				<!-- Aquí aparecerán las solicitudes -->
				<div class="col">
					<ul class="list-group ">

						@if (Model.Count() == 0)
						{
							@*<div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
						<strong>No requests found </strong> <!--Press <a asp-controller="Requests" asp-action="ManageIndex" class="alert-link">"Here"</a> to see all requests.-->
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>*@
							<div class="row">
								<div class="col-12 d-flex justify-content-center">
									<i class="bi bi-file-earmark-excel-fill custom-icon"></i>
								</div>
							</div>
							<div class="row">
								<div class="col-12 d-flex justify-content-center">
									<p class="no-data-text">There are no requests to manage.</p>
								</div>
							</div>
						}
						else
						{
							<li class="list-group-item custom-list-group">
								<div class="row text-center">
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["NameOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">User</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["ReasonOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Reason</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["StartDayOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Start Date</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["HalfDayStartOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Is Half Day?</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["EndDayOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">End Date</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["HalfDayEndOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Is Half Day?</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["RequestDayOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Request Date</a>
									</div>
									<div class="col fw-bold">
										<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["CommentsOrder"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-filter-link">Comments</a>
									</div>
									<div class="col fw-bold">Approve/Reject</div>
								</div>
							</li>
						}

						<!-- Solicitudes -->
						@foreach (var item in Model)
						{
							<li class="list-group-item">
								<div class="row text-center d-flex justify-content-center align-items-center">
									<div class="col">@Html.DisplayFor(model => item.User.Name) @Html.DisplayFor(model => item.User.Surname)</div>
									<div class="col">@Html.DisplayFor(model => item.Reason.Name)</div>
									<div class="col">@Html.DisplayFor(model => item.StartDate)</div>
									<div class="col d-flex justify-content-center align-items-center">
										@{
											Console.WriteLine("\n\n\n\n\n\n" + item.HalfDayStart);
											if (item.HalfDayStart.Equals(true))
											{
												<i class="bi bi-check-square-fill"></i>
											}
											else
											{
												<i class="bi bi-x-square-fill"></i>
											}
										}
									</div>
									<div class="col">@Html.DisplayFor(model => item.EndDate)</div>
									<div class="col d-flex justify-content-center align-items-center">
										@{
											if (item.HalfDayEnd.Equals(true))
											{
												<i class="bi bi-check-square-fill"></i>
											}
											else
											{
												<i class="bi bi-x-square-fill"></i>
											}
										}
									</div>
									<div class="col">@Html.DisplayFor(model => item.RequestDate)</div>
									<div class="col">@Html.DisplayFor(model => item.Comments)</div>
									<div class="col">
										<form asp-action="Manage" method="post">
											<input type="hidden" name="id" value="@item.RequestId" />
											<button type="submit" class="btn btn-unstyled" name="option" value="Approved"><i class="bi bi-clipboard2-check-fill custom-icon-approve"></i></button>
											<button type="submit" class="btn btn-unstyled" name="option" value="Cancelled"><i class="bi bi-clipboard2-x-fill custom-icon-cancel"></i></button>
										</form>
									</div>
								</div>
							</li>
						}

						<!--<li class="list-group-item">
							<div class="row text-center">
								<div class="col">
									Vacations
								</div>
								<div class="col">
									13/05/2024
								</div>
								<div class="col">
									Is half day?
								</div>
								<div class="col">
									31/05/2024
								</div>
								<div class="col">
									Is half day?
								</div>
								<div class="col">
									15
								</div>
								<div class="col">
									10/05/2024
								</div>
								<div class="col">
									Pending
								</div>
							</div>
						</li>-->
					</ul>
				</div>
			</div>
		</div>
	</div>

	@{
		var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
		var nextDisabled = !Model.HasNextPage ? "disabled" : "";
	}

	<div class="card-footer py-3">
		<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["currentOrder"]"
		   asp-route-numPage="@(Model.PageIndex -1)" asp-route-currentFilter="@ViewData["CurrentFilter"]"
		   class="custom-button btn @previousDisabled">Previous</a>
		@for (var i = 1; i <= Model.TotalPages; i++)
		{
			var activePage = (i == Model.PageIndex) ? "active" : "";
			<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["currentOrder"]" asp-route-numPage="@i"
			   asp-route-currentFilter="@ViewData["CurrentFilter"]" class="custom-button btn @activePage">@i</a>
		}

		<a asp-controller="Requests" asp-action="ManageIndex" asp-route-sortOrder="@ViewData["CurrentOrder"]"
		   asp-route-numPage="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]"
		   class="custom-button btn @nextDisabled">Next</a>
	</div>

</div>