@model SII_DaysOff.Models.Requests

@{
    ViewData["notShow"] = false;
    ViewData["Title"] = "Delete";
}

<h1 class="d-flex ms-3">Delete request</h1>
<hr />
<div class="row custom-container-edit">
    <div class="col-6 ms-5">
        <div class="row py-2">
            <div class="col-12">
                <h3 style="color: #d30012;">Are you sure you want to delete this?</h3>
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.User.Name)
            </div>
            <div class="col-6">
                <span>@Html.DisplayFor(model => model.User.Name) @Html.DisplayFor(model => model.User.Surname)</span>
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.Reason)
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.Reason.Name)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.RequestDate)
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.RequestDate)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.CreationDate)
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.CreationDate)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.ModificationDate)
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.ModificationDate)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model => model.Comments)
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.Comments)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.StartDate)
            </div>
            <div class="col-3 mb-2 mb-md-0">
                @Html.DisplayFor(model => model.StartDate)
            </div>
            <div class="col-6 col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.HalfDayStart)
            </div>
            <div class="col-3">
                @Html.DisplayFor(model => model.HalfDayStart)
            </div>
        </div>
        <div class="row py-3">
            <div class="col-6 col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.EndDate)
            </div>
            <div class="col-3 mb-2 mb-md-0">
                @Html.DisplayFor(model => model.EndDate)
            </div>
            <div class="col-6 col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.HalfDayEnd)
            </div>
            <div class="col-3">
                @Html.DisplayFor(model => model.HalfDayEnd)
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="RequestId" />
            <input type="submit" value="Delete" class="custom-button" />
        </form>
    </div>
</div>