@model SII_DaysOff.Models.VacationDays

<div class="modal fade" id="VacationDaysModal" tabindex="-1" aria-labelledby="VacationDaysModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="VacationDaysModalLabel"><i class="bi bi-clipboard2-plus-fill"></i>   New vacation days</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="VacationDays" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class="col-3 fw-bold">
                                <label asp-for="Year" class="control-label"></label>
                            </div>
                            <div class="col-9">
                                <input asp-for="Year" class="form-control" min="2000" max="2050" name="year" value="@ViewData["YearSelected"]" id="yearPickerVacationDays" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class="col-3 fw-bold">
                                <label asp-for="DayVacations" class="control-label"></label>
                            </div>
                            <div class="col-9">
                                <input asp-for="DayVacations" class="form-control" min="0" />
                                <span asp-validation-for="DayVacations" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="custom-button">Create vacation days</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
