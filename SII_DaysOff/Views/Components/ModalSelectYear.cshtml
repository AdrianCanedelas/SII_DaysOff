<div class="modal fade" id="calendarModal" tabindex="-1" aria-labelledby="calendarModalLabel" aria-hidden="true" data-bs-backdrop="static">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="calendarModalLabel"><i class="bi bi-clipboard2-plus-fill"></i>   Select year / month</h4>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form asp-action="ExportExcel" asp-controller="requests" asp-route-type="calendar">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="row p-3">
						<div class="col-4 fw-bold">
							<label for="year" class="control-label">Select year</label>
						</div>
						<div class="col-5">
							<input type="text" class="form-control" id="yearPicker" min="2000" max="2050" name="year" value="@ViewData["YearSelected"]" readonly style="width: 100%;" />
						</div>
						<div class="col-3 d-flex justify-content-start">
							<i class="bi bi-calendar-week custom-icon-calendar"></i>
						</div>
					</div>
					<div class="row p-3">
						<div class="col-4 fw-bold">
							<label for="month" class="control-label">Select month</label>
						</div>
						<div class="col-5">
							<input type="text" class="form-control" id="monthPicker" name="month" readonly style="width: 100%;" />
						</div>
						<div class="col-3 d-flex justify-content-start">
							<i class="bi bi-calendar-week custom-icon-calendar"></i>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="custom-button">Export</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
