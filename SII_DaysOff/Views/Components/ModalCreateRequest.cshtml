@model SII_DaysOff.Models.Requests

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel"><i class="bi bi-clipboard2-plus-fill"></i>   New request</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Requests">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class="col-4 col-md-3">
                                <label asp-for="ReasonId" class="control-label fw-bold"></label>
                            </div>
                            <div class="col-8 col-md-9">
                                <select asp-for="ReasonId" class="form-control" asp-items="ViewBag.ReasonId"></select>
                            </div>
						</div>
					</div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class=" col-4 col-md-3">
                                <label asp-for="StartDate" class="control-label fw-bold"></label>
                            </div>
                            <div class="col-8 col-md-9">
                                <input asp-for="StartDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" min="1900" max="2100"/>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class="col-4 col-md-3">
                                <label asp-for="EndDate" class="control-label fw-bold"></label>
                            </div>
                            <div class="col-8 col-md-9">
                                <input asp-for="EndDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" min="1900" max="2100"/>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row p-3">
                            <div class=" col-4 col-md-3">
                                <label asp-for="Comments" class="control-label fw-bold"></label>
                            </div>
                            <div class="col-8 col-md-9">
                                <input asp-for="Comments" class="form-control" value="-"/>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group form-check">
                        <div class="row p-3">
                            <div class=" col-6 d-flex justify-content-center fw-bold">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="HalfDayStart" /> @Html.DisplayNameFor(model => model.HalfDayStart)
                                </label>
                            </div>
                            <div class="col-6 d-flex justify-content-center fw-bold">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="HalfDayEnd" /> @Html.DisplayNameFor(model => model.HalfDayEnd)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="custom-button">Send request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
