@model SII_DaysOff.Models.VacationDays

@{
    ViewData["Navigation"] = "VacationDays";
    ViewData["notShow"] = false;
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="ms-3">Edit vacation days</h1>
<hr />
<div class="container-fluid">
    <div class="custom-container-edit mx-auto">
        <div class="row p-3 d-flex justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xxl-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row d-flex justify-content-start py-2">
                        <div class="col-12">
                            <input type="hidden" asp-for="Year" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="CreationDate" />
                            <input type="hidden" asp-for="ModifiedBy" />
                            <input type="hidden" asp-for="ModificationDate" />
                            <div class="form-group">
                                <label asp-for="Year" class="control-label fw-bold"></label>
                                <input asp-for="Year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-start py-2">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="DayVacations" class="control-label fw-bold"></label>
                                <input asp-for="DayVacations" class="form-control" min="0" />
                                <span asp-validation-for="DayVacations" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-start py-2">
                        <div class="col-4">
                            <div class="form-group">
                                <input type="submit" value="Save" class="custom-button" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
